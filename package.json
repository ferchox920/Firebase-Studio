{
  "name": "node-express-api-ts",
  "description": "Simple api sample in Node",
  "version": "1.0.0",
  "private": true,
  "main": "app.js",
  "scripts": {
    "dev": "nodemon --watch 'src/**' --ext 'ts,json' --exec 'npm run build && npm run start'",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "typeorm": "ts-node ./node_modules/typeorm/cli.js -d src/config/data-source.ts",
    "typeorm:migrate:generate": "npm run build && npx typeorm migration:generate -d dist/config/data-source.js src/migrations/CreatePasswordReset",
    "typeorm:migrate:run": "npm run build && npx typeorm migration:run -d dist/config/data-source.js"
  },
  "author": "Google LLC",
  "license": "Apache-2.0",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "express-async-handler": "^1.2.0",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.1.0",
    "install": "^0.13.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.10.1",
    "npm": "^11.3.0",
    "pg": "^8.14.1",
    "reflect-metadata": "^0.2.2",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^3.0.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^20.12.12",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.11.13",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "typeorm": "^0.3.22",
    "typescript": "^5.4.5"
  }
}